import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.util.Timer;

public class Cliqueur {
	
	//Initialisation
	static int pieceCounter,timerSpeed,valeurPiece,prixBonus,valeurBonus;
	static double persecond;
	static boolean timerOn;
	static Timer timer;
	
	public Cliqueur() {
		persecond = 0;
		pieceCounter = 0;
		timerOn = false;
		valeurPiece = 1;
		prixBonus = 10;
		valeurBonus = 100;
	}
	
	public static void clearScreen() {    
		for(int i = 1; i <= 10; i++){
			System.out.println();
		}
	}  
	
	
	//Getters and Setters
	public int getPieceCounter() {
		return pieceCounter;
	}
	public void setPieceCounter(int pieceCounter) {
		this.pieceCounter = pieceCounter;
	}
	public int getTimerSpeed() {
		return timerSpeed;
	}
	public void setTimerSpeed(int timerSpeed) {
		this.timerSpeed = timerSpeed;
	}
	public double getPersecond() {
		return persecond;
	}
	public void setPersecond(double persecond) {
		this.persecond = persecond;
	}
	public boolean isTimerOn() {
		return timerOn;
	}
	public void setTimerOn(boolean timerOn) {
		this.timerOn = timerOn;
	}
	public Timer getTimer() {
		return timer;
	}
	public void setTimer(Timer timer) {
		this.timer = timer;
	}

	//renvoie un mélange précis d'infos sur le cliqueur
	public String toString() {
		return "Les éléments importants du cliqueur peuvent s'afficher ici : \n persecond = " +persecond+"\n pieceCounter= "+
		pieceCounter+ "\n timerOn = "+ timerOn+"\n valeurPiece = "+valeurPiece+
		"\n prixBonus = "+ prixBonus +"\n valeurBonus = "+valeurBonus;
	}
	
	
	
}
